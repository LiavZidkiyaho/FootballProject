<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FootballProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FootballProject"
    xmlns:views="clr-namespace:FootballProject.View"
    Shell.FlyoutBehavior="Flyout"
    Title="FootballProject">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="rMainPage" />
    <ShellContent
        Title="LogIn"
        ContentTemplate="{DataTemplate local:View.LogIn}"
        Route="rLogIn" />
    <ShellContent
        Title="PlayerProfile"
        ContentTemplate="{DataTemplate local:View.PlayerProfile}"
        Route="PlayerProfile" />
    
</Shell>
