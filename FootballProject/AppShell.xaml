<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FootballProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FootballProject"
    xmlns:views="clr-namespace:FootballProject.View"
    Shell.FlyoutBehavior="Disabled"
    Title="FootballProject">


    <TabBar >
        <Tab Title="HomePage">
            <ShellContent
             Title="HomePage"
             ContentTemplate="{DataTemplate local:View.HomePage}"
             Route="rHomePage" />
        </Tab>

        <Tab Title="View Users">
            <ShellContent
             Title="ViewUsers"
             ContentTemplate="{DataTemplate local:View.ViewUsers}"
             Route="rViewUsers" />
            </Tab>

            <Tab Title="Sign Up">
            <ShellContent
             Title="ViewUsers"
             ContentTemplate="{DataTemplate local:View.SignUp}"
             Route="rSignUp" />
        </Tab>

    </TabBar>

</Shell>
