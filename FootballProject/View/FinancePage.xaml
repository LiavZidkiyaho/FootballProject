<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballProject.View.FinancePage"
             Title="Finance"
             BackgroundColor="#1E1E1E">

    <!-- Add Padding and Margin to the Grid -->
    <Grid Padding="30">
        <!-- Define 2 Rows with equal height, and 3 Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left frames will take full width -->
            <ColumnDefinition Width="*" />
            <!-- Empty space in the middle -->
            <ColumnDefinition Width="500" />
            <!-- Right vertical frame -->
        </Grid.ColumnDefinitions>

        <!-- Overall Bank Balance Frame -->
        <Frame Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" CornerRadius="30" BackgroundColor="#8294C4"
               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20">
            <Label Text="Overall Bank Balance: 999,999,999 €" TextColor="White" FontSize="Large" FontAttributes="Bold" 
                   HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Padding="20"/>
        </Frame>

        <!-- Profit/Loss This Season Frame -->
        <Frame Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="0" CornerRadius="30" BackgroundColor="#8294C4"
               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20">
            <Label Text="Profit/Loss This Season: 999,999,999 €" TextColor="White" FontSize="Large" FontAttributes="Bold" 
                   HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Padding="20"/>
        </Frame>

        <!-- Vertical Right Frame -->
        <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" CornerRadius="30" BackgroundColor="#8294C4"
               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20">
            <Label Text="Vertical Border" TextColor="White" FontSize="Large" FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="20"/>
        </Frame>
    </Grid>
</ContentPage>
