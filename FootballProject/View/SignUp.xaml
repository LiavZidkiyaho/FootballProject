<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballProject.View.SignUp"
             Title="SignUp"
             BackgroundColor="#1E1E1E">

    <VerticalStackLayout FlowDirection="LeftToRight">
        <Grid RowDefinitions="*,*,*,*,*,*,*,*,*,*">

            <!-- Error Message -->
            <Label Grid.Row="0"
                   Text="{Binding ErrorMessage}"
                   IsVisible="{Binding HasError}"
                   FontSize="15"
                   TextColor="Red"
                   Margin="0,10,0,0"
                   HorizontalTextAlignment="Center" />

            <!-- Name -->
            <HorizontalStackLayout Grid.Row="1">
                <Label TextColor="White" Padding="15" Text="Name:" FontSize="15" />
                <Entry Placeholder="Enter your name"
                       Text="{Binding Name}"
                       PlaceholderColor="White"
                       TextColor="White"
                       WidthRequest="250"
                       ReturnType="Next"/>
            </HorizontalStackLayout>

            <!-- Username -->
            <HorizontalStackLayout Grid.Row="2">
                <Label TextColor="White" Padding="15" Text="Username:" FontSize="15" />
                <Entry Placeholder="Enter username"
                       Text="{Binding Username}"
                       PlaceholderColor="White"
                       TextColor="White"
                       WidthRequest="250"/>
            </HorizontalStackLayout>

            <!-- Password -->
            <HorizontalStackLayout Grid.Row="3">
                <Label TextColor="White" Padding="15" Text="Password:" FontSize="15" />
                <Entry Placeholder="Enter password"
                       Text="{Binding Password}"
                       PlaceholderColor="White"
                       TextColor="White"
                       WidthRequest="250"
                       IsPassword="True"/>
            </HorizontalStackLayout>

            <!-- Email -->
            <HorizontalStackLayout Grid.Row="4">
                <Label TextColor="White" Padding="15" Text="Email:" FontSize="15" />
                <Entry Placeholder="Enter email"
                       Text="{Binding Email}"
                       PlaceholderColor="White"
                       TextColor="White"
                       WidthRequest="250"
                       Keyboard="Email"/>
            </HorizontalStackLayout>

            <!-- Team Picker -->
            <HorizontalStackLayout Grid.Row="5">
                <Label TextColor="White" Padding="15" Text="Team:" FontSize="15" />
                <Picker Title="Select a team"
                        ItemsSource="{Binding Teams}"
                        ItemDisplayBinding="{Binding team1}"
                        SelectedItem="{Binding SelectedTeam}"
                        WidthRequest="250"
                        TextColor="White"/>
            </HorizontalStackLayout>

            <!-- Role Picker -->
            <HorizontalStackLayout Grid.Row="6">
                <Label TextColor="White" Padding="15" Text="Role:" FontSize="15" />
                <Picker Title="Select a role"
                        ItemsSource="{Binding Roles}"
                        SelectedItem="{Binding SelectedRole}"
                        WidthRequest="250"
                        TextColor="White"/>
            </HorizontalStackLayout>

            <!-- Admin Selection -->
            <HorizontalStackLayout Grid.Row="7">
                <Label TextColor="White" Padding="15" Text="Is Admin:" FontSize="15" />
                <RadioButton Content="Yes" GroupName="adminGroup" IsChecked="{Binding IsAdmin}" />
                <RadioButton Content="No" GroupName="adminGroup" IsChecked="{Binding IsNotAdmin}" />
            </HorizontalStackLayout>

            <!-- Register Button -->
            <Button Grid.Row="8"
                    Text="Register"
                    BorderColor="#8294C4"
                    BackgroundColor="#8294C4"
                    TextColor="White"
                    Command="{Binding AddUserCommand}"
                    IsEnabled="{Binding CanAddUser}"
                    HorizontalOptions="Center"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
