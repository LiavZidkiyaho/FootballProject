<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballProject.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <!--create mainpage for footbal based app-->
            <Label Text="Football Project" FontSize="Title" HorizontalOptions="Center" />
            <Label Text="Welcome to the Football Project" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="This is a simple football project that will show you the latest football news, fixtures, and results." FontSize="Medium" HorizontalOptions="Center" />
            <Label Text="Please select an option from the menu to get started." FontSize="Medium" HorizontalOptions="Center" />

            <Image Source="football.jpg" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
